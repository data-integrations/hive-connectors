{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Hive",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes": {
            "placeholder": "Name used to identify this source for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Metastore URL",
          "name": "metastoreUrl",
          "widget-attributes": {
            "placeholder": "thrift://<hostname>:<port>"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Database",
          "name": "database"
        },
        {
          "widget-type": "textbox",
          "label": "Table",
          "name": "table"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Partition Filter",
          "name": "partitionFilter"
        },
        {
          "widget-type": "keyvalue",
          "label": "Properties",
          "name": "connectionProperties",
          "widget-attributes": {
            "showDelimiter": "false"
          }
        }
      ]
    }
  ]
}
